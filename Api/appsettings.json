{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
      }
    },
    "Enrich": [
      "WithMachineName",
      "WithEnvironmentName",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId",
      "WithThreadName",
      "WithCorrelationId",
      "WithCorrelationIdHeader",
      "WithClientAgent",
      {
        "Name": "WithClientIp",
        "Args": {
          "xForwardHeaderName": "X-Forwarded-For"
        }
      },
      "FromLogContext"
    ],
    "Properties": {
      "Application": "serilog-datadog-sampleapp"
    }
  },
  "AllowedHosts": "*"
}
